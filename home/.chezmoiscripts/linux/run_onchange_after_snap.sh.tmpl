#!/usr/bin/env bash

sudo=""
if [ "$(id -u)" -ne 0 ]; then
    sudo="sudo"
fi

install_snapd() {
    command -v snap >/dev/null 2>&1 || $sudo apt-get install -y snap snapd && echo "snapd installed." || echo "snapd install failed."
}

install_snap() {

    {{ range .packages.snap.classic }}
    command -v {{ . }} >/dev/null 2>&1 || $sudo snap install {{ . }} --classic && echo "{{ . }} installed." || echo "{{ . }} install failed."
    {{ end }}

    {{ range .packages.snap.latest }}
    command -v {{ . }} >/dev/null 2>&1 || $sudo snap install {{ . }} && echo "{{ . }} installed." || echo "{{ . }} install failed."
    {{ end }}

    if command -v firefox >/dev/null 2>&1; then
        $sudo snap remove firefox || $sudo apt remove firefox && echo "firefox uninstalled." || echo "firefox uninstall failed."
    fi

    echo "snap tools installed."
}

echo "snap.sh"
echo "--------------------------------"
install_snapd
install_snap
echo "--------------------------------"
echo "snap tools installed."
echo "--------------------------------"
