{{/* シークレット系 */}}
{{- $bitwarden := false -}}{{/* bitwarden のパスワードを取得する */}}
{{- $age := false -}}{{/* age 暗号化 */}}

{{/* github系 */}}
{{- $github := false -}}{{/* github ユーザー名を設定する */}}
{{- $ssh := false -}}{{/* ssh AuthorizedKeys をgithubから設定する */}}

{{/* github ユーザー名の設定 */}}
{{- $name := "budybye" -}}
{{- $email := "101wayout@gmail.com" -}}

{{/* OSの検出 linuxの場合は distribution を取得する */}}
{{- $osID := .chezmoi.os -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "id")) -}}
{{-     $osID = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{/* インタラクティブでは実行しない */}}
{{- if or (env "CODESPACES") (env "REMOTE_CONTAINERS") (env "DOCKER") (env "GITHUB_ACTIONS") (eq .chezmoi.username "root" "ubuntu" "dev" "vscode" "runner") -}}
{{- $bitwarden = false -}}
{{- $age = false -}}
{{- end -}}

{{/* 環境毎に name email github ssh を設定する */}}

{{/* Actions */}}
{{- if eq (env "GITHUB_ACTIONS") "true" -}}
    {{- $name = "runner" -}}
    {{- $github = true -}}
    {{- $ssh = false -}}

{{/* Codespaces */}}
{{- else if eq (env "CODESPACES") "true" -}}
    {{- $name = "vscode" -}}
    {{- $github = true -}}
    {{- $ssh = false -}}

{{/* Remote Containers */}}
{{- else if eq (env "REMOTE_CONTAINERS") "true" -}}
    {{- $name = "dev" -}}
    {{- $github = true -}}
    {{- $ssh = true -}}

{{/* Docker */}}
{{- else if eq (env "DOCKER") "true" -}}
    {{- $name = "docker" -}}
    {{- $github = true -}}
    {{- $ssh = true -}}

{{/* Ubuntu multipass */}}
{{- else if eq .chezmoi.username "ubuntu" -}}
    {{- $name = "budybye" -}}
    {{- $email = "101wayout@gmail.com" -}}
    {{- $github = true -}}
    {{- $ssh = true -}}

{{/* Ubuntu lxd */}}
{{- else if eq .chezmoi.username "budybye" -}}
    {{- $bitwarden = true -}}
    {{- $age = true -}}
    {{- $github = true -}}
    {{- $ssh = true -}}

{{/* Mac */}}
{{- else if eq .chezmoi.username "hotmilk" -}}
    {{- $bitwarden = true -}}
    {{- $email = (bitwarden "item" "gh").login.password -}}
    {{- $name = (bitwarden "item" "gh").login.username -}}
    {{- $age = true -}}
    {{- $github = true -}}
    {{- $ssh = true -}}

{{/* その他、windows */}}
{{- else -}}
    {{- $name = .chezmoi.username -}}
    {{- $email = "null" -}}
    {{- $bitwarden = false -}}
    {{- $age = false -}}
    {{- $github = false -}}
    {{- $ssh = true -}}
{{- end -}}

# シンボリックリンクを作成する
mode = "symlink"

# sourceDir = "~/dotfiles"

# ファイルのパーミッションを変更する
# umask = 0o22

scriptTempDir = "~/tmp"

{{/* age 暗号化 */}}
{{/* if eq (.age) "false" コメントアウト */}}
{{ if ne (env "GITHUB_ACTIONS") "true" }}
encryption = "age"
[age]
    identity = "~/config/chezmoi/key.txt"
    recipients = "age1nvdw6x8addcnfwsa26ed8vz7yv8y9425utujnsy7tcj64qs2ddasl2mphg"
    passphrase = true
    symmetric = true

{{ end }}

{{/* ".data.***" or ".***" の設定 */}}
[data]
    email = {{ $email | quote }}
    name = {{ $name | quote }}
    osid = {{ $osID | quote }}
    bitwarden = {{ $bitwarden }}
    age = {{ $age }}
    github = {{ $github }}
    ssh = {{ $ssh }}

{{/* git の設定 */}}
[git]
    autoPush = false
    autoCommit = false
    autoAdd = false

{{/* github の設定 */}}
[github]
    refreshPeriod = "12h"

{{/* ファイルの編集 */}}
[edit]
    command = "vim"
    # command = "code"
    # commandArgs = ["--wait"]

{{/* スクリプト環境変数の設定 */}}
[sctiptEnv]
    SSS = "SouthSideSound"
