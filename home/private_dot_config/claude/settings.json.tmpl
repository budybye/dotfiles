			"CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
      "ANTHROPIC_BASE_URL": {{ (bitwardenFields "item" "claude").base_url.value | quote}}
		},
  "permissions": {
    "allow": [],
    "deny": []
  },
  "hooks": {},
