music_directory "~/Music/riddim"
playlist_directory "~/.config/mpd/playlists"
db_file "~/.config/mpd/mpd.db"
log_file "~/.config/mpd/mpd.log"
pid_file "~/.config/mpd/mpd.pid"
state_file "~/.local/state/mpd/state"
auto_update "yes"
auto_update_depth "2"
follow_outside_symlinks "yes"
follow_inside_symlinks "yes"

{{ if eq .chezmoi.os "darwin" }}

audio_output {
    type "osx"
    name "CoreAudio"
    mixer_type "software"
}

{{ else }}

audio_output {
    type "pipewire"
    name "PipeWire"
    path "~/.config/mpd/mpd.fifo"
    format "44100:16:2"
}

{{ end }}

decoder {
    plugin "mp4ff"
    enabled "no"
}
bind_to_address "127.0.0.1"
#bind_to_address "0.0.0.0"
port "6600"
# Visualizer
audio_output {
    type "fifo"
    name "my_fifo"
    path "~/.config/mpd/mpd.fifo"
    format "44100:16:2"
    auto_resample "no"
    use_mmap "yes"
}
