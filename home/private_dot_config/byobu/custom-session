#!/bin/bash

DIR="${HOME}/dotfiles"
byobu-tmux new-session -d  -s dotfiles -n dotfiles -c "$DIR"
byobu-tmux new-window -n cloud-init -c "$DIR/cloud-init"
byobu-tmux new-window -n home -c "$DIR/home"
byobu-tmux new-window -n github -c "$DIR/.github"
byobu-tmux new-window -n devcontainer -c "$DIR/.devcontainer"
byobu-tmux attach -t dotfiles
