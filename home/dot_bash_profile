if [ -f "${HOME}/.profile" ]; then
    . "${HOME}/.profile"
fi

mkdir -p "${XDG_STATE_HOME}/bash"
export HISTFILE="${XDG_STATE_HOME}/bash/bash_history"

if [ -f "${HOME}/.bashrc" ]; then
    . "${HOME}/.bashrc"
fi

if [ $SHLVL = 1 ]; then
    if command -v zellij > /dev/null 2>&1; then
        zellij
    elif command -v tmux > /dev/null 2>&1; then
        tmux
    fi
fi
