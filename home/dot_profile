    mkdir -p "${XDG_CONFIG_HOME}/sampler"
    touch "${XDG_CONFIG_HOME}/sampler/config.yaml"
    alias sampler="sampler --config ${XDG_CONFIG_HOME}/sampler/config.yaml"
fi

if command -v aws >/dev/null 2>&1; then
    mkdir -p "${XDG_CONFIG_HOME}/aws"
    touch "${XDG_CONFIG_HOME}/aws/credentials"
    export AWS_SHARED_CREDENTIALS_FILE="${XDG_CONFIG_HOME}/aws/credentials"
    touch "${XDG_CONFIG_HOME}/aws/config"
    export AWS_CONFIG_FILE="${XDG_CONFIG_HOME}/aws/config"
fi

if command -v claude >/dev/null 2>&1; then
    mkdir -p "${XDG_CONFIG_HOME}/claude"
    export CLAUDE_CONFIG_DIR="${XDG_CONFIG_HOME}/claude"
    # Claude AIを常に日本語応答にする環境変数
    export CLAUDE_DEFAULT_LANGUAGE="ja_JP"
