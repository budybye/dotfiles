    mkdir -p "${XDG_DATA_HOME}/ffmpeg"
    export FFMPEG_DATADIR="${XDG_DATA_HOME}/ffmpeg"
fi

if command -v conan >/dev/null 2>&1; then
    mkdir -p "${XDG_CONFIG_HOME}/conan"
    export CONAN_USER_HOME="${XDG_CONFIG_HOME}/conan"
