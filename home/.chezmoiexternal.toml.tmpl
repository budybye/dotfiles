# https://www.chezmoi.io/user-guide/include-files-from-elsewhere/

[".config/vim/autoload/plug.vim"]
    type = "file"
    url = "https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim"
    refreshPeriod = "168h"

["data"]
