    url = "https://gateway.pinata.cloud/ipfs/bafybeiee26uekcs4fhxv6z3yvz4cm6xykuvty2sk6jbzo4xaqhkxtynp6q"
    stripComponents = 1
    refreshPeriod = "168h"

{{ if eq .chezmoi.os "darwin" }}

