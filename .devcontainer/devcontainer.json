{
    "name": "dotfiles",
    "dockerComposeFile": "docker-compose.yaml",
    "service": "ubuntu",
    "workspaceFolder": "/workspace",
    "remoteUser": "vscode",
    "shutdownAction": "stopCompose",
    "forwardPorts": [3000, 4000, 9443, 3389, 8787, 8080, 4001, 5001, 80],
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y curl git make",
    "remoteEnv": {
      "GIT_USER": "budybye"
    },
    "features": {
      "ghcr.io/devcontainers/features/docker-in-docker:2": {},
      "ghcr.io/budybye/dotfiles/ubuntu-dev:main": {}
    },
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash",
          "editor.formatOnSave": true,
          "files.autoSave": "afterDelay",
          "files.autoSaveDelay": 1000,
          "python.pythonPath": "/usr/local/bin/python3",
          "editor.tabSize": 4,
          "files.exclude": {
            "**/.git": true,
            "**/.DS_Store": true
          },
          "dotfiles.repository": "budybye/dotfiles",
          "dotfiles.targetPath": "~/dotfiles",
          "dotfiles.installCommand": "make init"
        },
        "extensions": [
          "ms-python.python",
          "ms-vscode.cpptools",
          "esbenp.prettier-vscode",
          "dbaeumer.vscode-eslint",
          "ms-azuretools.vscode-docker",
          "eamodio.gitlens",
          "hashicorp.terraform",
          "oderwat.indent-rainbow",
          "esbenp.prettier-vscode"
        ]
      }
    }
  }
