{
    "name": "dotfiles",
    "dockerComposeFile": "docker-compose.yaml",
    "service": "ubuntu",
    "workspaceFolder": "/workspace",
    "remoteUser": "vscode",
    "shutdownAction": "stopCompose",
    "forwardPorts": [ 3000, 4000, 9443, 3389, 8787, 8080, 4001, 5001, 80 ],
    "postCreateCommand": "sudo apt-get update -y && sudo apt-get upgrade -y",
    "remoteEnv": {
      "USER_NAME": "budybye"
    },
    "features": {
      "ghcr.io/devcontainers/features/docker-in-docker:2": {},
      "ghcr.io/budybye/dotfiles/ubuntu-dev:main": {}
    },
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.shell.linux": "/bin/zsh",
          "editor.formatOnSave": true,
          "files.autoSave": "afterDelay",
          "files.autoSaveDelay": 3000,
          "editor.tabSize": 4,
          "files.exclude": {
            "**/.git": true,
            "**/.DS_Store": true
          },
          "dotfiles.repository": "budybye/dotfiles",
          "dotfiles.targetPath": "~/dotfiles",
          "dotfiles.installCommand": "~/dotfiles/dot_local/bin/init.sh"
        },
        "extensions": [
          "42crunch.vscode-openapi",
          "biomejs.biome",
          "christian-kohler.path-intellisense",
          "corschenzi.mermaid-graphical-editor",
          "dbaeumer.vscode-eslint",
          "esbenp.prettier-vscode",
          "editorconfig.editorconfig",
          "github.vscode-github-actions",
          "monokai.theme-monokai-pro-vscode",
          "ms-azuretools.vscode-docker",
          "ms-vscode-remote.remote-containers",
          "ms-vscode-remote.remote-ssh-edit",
          "ms-vscode-remote.remote-wsl",
          "ms-vscode-remote.vscode-remote-extensionpack",
          "visualstudioexptteam.vscodeintellicode",
          "visualstudioexptteam.intellicode-api-usage-examples",
          "oderwat.indent-rainbow",
          "tailwindcss.tailwind-vscode"
        ]
      }
    }
  }
