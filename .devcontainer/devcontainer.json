{
    "name": "dev",
    "dockerComposeFile": "docker-compose.yaml",
    "service": "ubuntu",
    "remoteUser": "docker",
    "workspaceFolder": "/home/docker",
    "forwardPorts": [
      3000, 4000, 9443, 3389, 8787, 8080, 4001, 5001, 80
    ],
    "initializeCommand":"echo 'Initializing...'",
    "onCreateCommand": "echo 'Creating...'",
    "postCreateCommand": "echo 'Post created...'",
    "postStartCommand": "echo 'Post started...'",
    "postAttachCommand": "echo 'Post attached...'",
    "shutdownAction": "stopCompose",
    "remoteEnv": {
      "USERNAME": "docker",
      "GIT_USER": "${GIT_USER}"
    },
    "features": {
      "ghcr.io/devcontainers/features/docker-in-docker:2": {},
      "ghcr.io/budybye/ubuntu-dev:main-dev": {}
    },
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.defaultProfile.linux": "zsh",
          "editor.tabSize": 4,
          "editor.formatOnSave": true,
          "files.autoSave": "afterDelay",
          "files.autoSaveDelay": 3000,
          "files.exclude": {
            "**/.git": true,
            "**/.DS_Store": true
          },
          "dotfiles.repository": "budybye/dotfiles",
          "dotfiles.targetPath": "~/dotfiles",
          "dotfiles.installCommand": "~/dotfiles/install.sh"
        },
        "extensions": [
          "42crunch.vscode-openapi",
          "adpyke.codesnap",
          "biomejs.biome",
          "christian-kohler.path-intellisense",
          "corschenzi.mermaid-graphical-editor",
          "dbaeumer.vscode-eslint",
          "esbenp.prettier-vscode",
          "editorconfig.editorconfig",
          "hediet.vscode-drawio",
          "formulahendry.auto-close-tag",
          "formulahendry.auto-complete-tag",
          "formulahendry.auto-rename-tag",
          "formulahendry.code-runner",
          "github.vscode-github-actions",
          "monokai.theme-monokai-pro-vscode",
          "ms-azuretools.vscode-docker",
          "ms-ceintl.vscode-language-pack-ja",
          "ms-vscode.hexeditor",
          "ms-vscode.live-server",
          "ms-vscode.makefile-tools",
          "ms-vscode-remote.remote-containers",
          "ms-vscode-remote.remote-ssh-edit",
          "ms-vscode-remote.remote-wsl",
          "ms-vscode-remote.vscode-remote-extensionpack",
          "naumovs.color-highlight",
          "visualstudioexptteam.vscodeintellicode",
          "visualstudioexptteam.intellicode-api-usage-examples",
          "oderwat.indent-rainbow",
          "tailwindcss.tailwind-vscode"
        ]
      }
    }
  }
