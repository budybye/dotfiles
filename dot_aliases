if command -v arch >/dev/null 2>&1; then
    alias amd='arch -x86_64 "$SHELL"'
    alias arm='arch -arm64 "$SHELL"'
fi

## ls lsd
if command -v lsd >/dev/null 2>&1; then
    alias ls='lsd --group-directories-first'
    alias l='ls -la'
    alias ll='ls -l'
    alias la='ls -a'
    alias lls='ls -la'
    alias lt='ls --tree'
fi

if command -v bat >/dev/null 2>&1; then
    alias cat="bat --theme 'Monokai Extended'"
fi

if command -v rg >/dev/null 2>&1; then
    alias grep="rg"
fi

if command -v fd >/dev/null 2>&1; then
    alias find="fd"
fi

if command -v zoxide >/dev/null 2>&1; then
    alias cd="zoxide"
fi

if command -v tldr >/dev/null 2>&1; then
    alias h="tldr"
fi

if command -v chezmoi >/dev/null 2>&1; then
    alias che="chezmoi"
    # git push してローカルに反映
    alias apply="cd ${HOME}/.local/share/chezmoi && bit && chezmoi init --apply -S . && ls -la && cd ${HOME}"
fi

## cursor mac ubuntu arm64 対応
if command -v cursor >/dev/null 2>&1; then
    alias code="cursor"
elif [ -f ${HOME}/Applications/cursor ]; then
    alias code="${HOME}/Applications/cursor --no-sandbox"
else
    if command -v codium >/dev/null 2>&1; then
        alias code="codium"
    fi
fi

## docker
if command -v docekr >/dev/null 2>&1; then
    alias d="docker"
    alias do="docker context show"
    alias di="docker image"
    alias dr="docker run --rm"
    alias ds='docker stop $(docker ps -q)'
    alias dps='docker ps --format "table {{.Names}}\t{{.Image}}\t{{.Ports}}\t{{.Status}}"'
    ## 停止コンテナ、タグ無しイメージ、未使用ボリューム、未使用ネットワーク一括削除
    alias drm="docker system prune -af --volumes"

    alias dc="docker compose"
    alias dcb="docker compose build"
    alias dcu="docker compose up"
    alias dcd="docker compose down"
fi

## brew
if command -v brew >/dev/null 2>&1; then
    alias bs="brew -S"
    alias bb='brew bundle --file "${HOME}/.config/Brewfile" && brew bundle cleanup --force --file "${HOME}/.config/Brewfile" && brew update && brew upgrade && brew autoremove && brew doctor'
fi

## multipass
if command -v multipass >/dev/null 2>&1; then
    alias mu="multipass"
    alias md="multipass launch docker -c 4 -m 8G -d 40G  --timeout 3600 --mount ${HOME}/apps:/home/ubuntu/apps && mu info docker"
    alias ml='multipass launch -n ubuntu -c 4 -m 8G -d 40G  --timeout 3600 --mount ${HOME}/dotfiles:/home/ubuntu/dotfiles --cloud-init ${HOME}/dotfiles/multipass.yaml'
fi

## kube
if command -v kubectl >/dev/null 2>&1; then
    alias ku="kubectl"
fi

if command -v apt >/dev/null 2>&1; then
    alias agi="sudo apt install"
    alias agu="sudo apt update && sudo apt upgrade"
    alias aq="apt search"
fi

## git
alias g="git"
alias bit='git add -A && git commit --allow-empty-message -m "" && git push origin $(git branch | sed -n -e "s/^\* \(.*\)/\1/p")'

# N: 文字化け対策 C: 色を付ける
alias tree="tree -NC"
alias www="ps cual"
alias lh="open -na 'Brave Browser' --args --new-window http://localhost:3000"
alias opop="for i in {1..3}; do time zsh -ic exit; done"
alias sss="starship explain && sheldon lock --update && opop"
alias q="exit"
alias x="cat ~/.config/neofetch/image.txt"
alias hg="history | grep"

alias python="python3"
alias pip="pip3"
alias npm="bun"
alias npx="bunx"
alias yarn="bun"
alias yarnx="bunx"
