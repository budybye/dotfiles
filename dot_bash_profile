if [ -f "${HOME}/.profile" ]; then
    . "${HOME}/.profile"
fi

mkdir -p "${HOME}/.local/state/bash"
HISTFILE="${HOME}/.local/state/bash/bash_history"

PS1='\[\e[32m\]\u@\h\[\e[m\]:\[\e[34m\]\w\[\e[m\] \$ '


if [ -f "${HOME}/.bashrc" ]; then
    . "${HOME}/.bashrc"
fi

if command -v byobu > /dev/null 2>&1 && [ ${SHLVL} = 1 ]; then
    byobu
fi
